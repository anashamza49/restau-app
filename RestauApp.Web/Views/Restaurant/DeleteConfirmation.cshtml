@model RestauApp.Application.DTOs.RestaurantDto

@{
    ViewData["Title"] = "Supprimer un restaurant";
}

<h2>Confirmer la suppression</h2>

<h4>Es-tu sûr de vouloir supprimer ce restaurant ?</h4>

<div>
    <h5>@Model.Nom</h5>
    <p><strong>Note :</strong> @Model.Note</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Image" width="200" />
    }
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
