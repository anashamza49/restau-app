@page
@model RestauApp.Web.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="~/css/restaurant-form.css">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<div class="form-header">
    <div class="header-pattern"></div>
    <div class="header-content">
        <h1>Ajouter un Restaurant</h1>
        <p class="header-subtitle">Partagez votre découverte culinaire avec la communauté</p>
    </div>
</div>

<div class="form-wrapper">
    <div class="form-container">
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-layout">
                <div class="form-column">
                    <div class="form-section">
                        <h3 class="form-section-title">Informations de base</h3>

                        <div class="form-group">
                            <label asp-for="Restaurant.Nom">Nom du restaurant</label>
                            <input asp-for="Restaurant.Nom" class="form-control" placeholder="Ex: Le Petit Bistro" />
                            <span asp-validation-for="Restaurant.Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group rating-container">
                            <label asp-for="Restaurant.Note">Note (sur 5)</label>
                            <input asp-for="Restaurant.Note" class="form-control" type="number" min="0" max="5" step="0.1" placeholder="Ex: 4.5" />
                            <span class="rating-note">Entrez une note entre 0 et 5</span>
                            <span asp-validation-for="Restaurant.Note" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-column">
                    <div class="form-section">
                        <h3 class="form-section-title">Photo du restaurant</h3>

                        <div class="form-group">
                            <input asp-for="ImageFile" type="file" id="imageFile" accept="image/*" />
                            <label for="imageFile">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <span>Sélectionnez une image du restaurant</span>
                                <div class="file-button">Parcourir</div>
                            </label>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a href="/Index" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Ajouter le restaurant
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
