@page
@model IndexModel
@using RestauApp.Application.DTOs

<h1>Liste des Restaurants</h1>

<div>
    <h4>Restaurants</h4>
    <hr />
    @foreach (var restaurant in Model.Restaurants)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => restaurant.Nom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => restaurant.Nom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => restaurant.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => restaurant.Note)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => restaurant.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => restaurant.ImageUrl)
            </dd>
        </dl>
    }
</div>
