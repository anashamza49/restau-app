@page
@model IndexModel
@using RestauApp.Application.DTOs

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="hero-section">
    <div class="container">
        <h1 class="hero-title">Découvrez nos restaurants</h1>
        <p class="hero-subtitle">Les meilleures adresses culinaires sélectionnées pour vous</p>
    </div>
</div>

<div class="container">
    <div class="section-header">
        <h2 class="section-title">Nos restaurants</h2>
        <div class="section-divider"></div>
    </div>

    <div class="restaurant-grid">
        @foreach (var restaurant in Model.Restaurants)
        {
            <div class="restaurant-card">
                <div class="restaurant-image-container">
                    <img class="restaurant-image" src="@restaurant.ImageUrl" alt="@restaurant.Nom" />
                    <div class="restaurant-badge">@restaurant.Note</div>
                </div>
                <div class="restaurant-content">
                    <h3 class="restaurant-name">@restaurant.Nom</h3>
                    <div class="restaurant-rating">
                        <span class="rating-text">Note: @restaurant.Note</span>
                    </div>
                    <div class="restaurant-actions">
                        <a href="/Details/@restaurant.Id" class="btn-details">Voir détails</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="cta-section">
    <div class="container">
        <h2 class="cta-title">Vous ne trouvez pas votre restaurant préféré ?</h2>
        <p class="cta-text">Ajoutez-le à notre collection et partagez votre expérience avec la communauté.</p>
        <a href="/Add" class="btn-primary">Ajouter un restaurant</a>
    </div>
</div>