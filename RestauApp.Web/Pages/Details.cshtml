@page "{id:int}"
@model RestauApp.Application.DTOs.RestaurantDto

<h1>Détails du Restaurant</h1>
@if (Model != null)
{
    <h4>@Model.Nom</h4>
    <p>@Model.Note</p>
    <img src="@Model.ImageUrl" alt="@Model.Nom" class="image-preview" />
}
else
{
    <p>Le restaurant demandé est introuvable.</p>
}
